{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "none",
    "strict": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@chaffity/fui": [
        "./packages/fui"
      ],
      "@chaffity/fui-core": [
        "./packages/fui-core/lib/fui-core"
      ],
      "@chaffity/fui-globals": [
        "./packages/fui-globals/lib/fui-globals"
      ],
      "@chaffity/fui-html": [
        "./packages/fui-html/lib/fui-html"
      ]
    }
  },
  "exclude": [
    "**/lib/**/*",
    "**/*.spec.ts"
  ]
}
