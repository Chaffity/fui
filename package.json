{
  "name": "fui",
  "description": "A functional UI framework",
  "scripts": {
    "install": "lerna link",
    "lint": "eslint .",
    "prepare": "lerna run prepare",
    "test": "jest"
  },
  "devDependencies": {
    "@emphori/eslint-config": "^0.1.7",
    "@emphori/jest-preset": "^0.0.5",
    "@types/jest": "^24.9.0",
    "@types/node": "^11.13.22",
    "eslint": "^6.7.0",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.5"
  },
  "eslintConfig": {
    "extends": "@emphori",
    "rules": {
      "no-empty-function": "off",
      "no-param-reassign": "off",
      "valid-jsdoc": "off"
    }
  },
  "jest": {
    "preset": "@emphori/jest-preset",
    "collectCoverageFrom": [
      "packages/*/src/main/**/*"
    ]
  },
  "license": "MIT",
  "private": true
}
